<config>
    <tabs>
        <ziny translate="label">
            <label>Ziny Extensions</label>
            <sort_order>202</sort_order>
        </ziny>
    </tabs>
    <sections>
        <zoomlente translate="label" module="zoomlente">
            <label>Zoom with Lens</label>
            <class>zoomlente</class>
            <tab>ziny</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <geral translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <ativo translate="label comment">
                            <label>Enable</label>
                            <comment>Defines whether the module is active or not.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ativo>
                        <borda_cor translate="label comment">
                            <label>Lens Border Color</label>
                            <comment>Define lens border color.</comment>
                            <frontend_type>text</frontend_type>
                            <validate>color</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </borda_cor>
                        <borda_tamanho translate="label comment">
                            <label>Lens Border Size</label>
                            <comment>Define lens border size (In px).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </borda_tamanho>
                        <transparencia translate="label comment">
                            <label>Lens Border Transparency</label>
                            <comment>Define lens border transparency. (Values .0 to 1)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transparencia>
                        <tipo translate="label comment">
                            <label>Lens Type</label>
                            <comment>Change your lens type.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>zoomlente/config_tipo</source_model>							
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tipo>
                        <tamanho translate="label comment">
                            <label>Lens Size</label>
                            <comment>Define lens total size. (Valid for width and height)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tamanho>
                    </fields>
                </geral>
            </groups>
        </zoomlente>
    </sections>
</config>